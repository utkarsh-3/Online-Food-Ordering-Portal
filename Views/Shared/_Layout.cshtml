
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <environment include="Development">
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/home.css" type="text/css" />
    </environment>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <img src="~/img/logo.jfif" height=40 width=40 style="padding-right:10px"/>
            <div class="navbar-brand text-white">

                EatFit

            </div>

            <ul class="nav navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="FoodItem" asp-action="Index">Food Menu</a>
                </li>

                @await Component.InvokeAsync("CategoryMenu")

                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Contact" asp-action="Index">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  text-white" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                        <i class="fa fa-shopping-cart"></i>
                        
                    </a>
                </li>
                
                    @using (Html.BeginForm("Search", "FoodItem", FormMethod.Get))
                    {

                        <li class="nav-item form-control-sm">
                            @Html.TextBox("searchString")
                            <input id="searchButton" class="btn btn-outline-light my-2 my-sm-0" type="submit" value="Search" />
                        </li>

                    }
                
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <partial name="_LoginPartial" />
            </ul>
            

        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("Scripts", false)
        </main>
    </div>


    <footer class="page-footer font-small bg-dark pt-4">
        <div class="container-fluid text-center text-white text-muted">
            
                <div class="footerContent">

                    <h5 class="text-uppercase">About Us</h5>
                    <p>We serve the best food dishes with top quality and best hygiene.</p>

                </div>
        </div>        
        <div class="footer-copyright text-center text-white text-muted py-3">
            © 2021 Copyright:
            <b> UtkarshKendre</b>
        </div>
    </footer>
    



</body>
</html>

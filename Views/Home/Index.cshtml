<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <environment include="Development">
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/homeStyle.css" type="text/css" />
    </environment>
    <script>
        var headings = ['Hungry ?', 'Craving for food ?', 'Cooking gone wrong ?','Surprise party ?'];
        var i = 0;
        var intervalId = setInterval(function () {
            document.getElementById('heading').innerHTML = headings[i];
            if (i == (headings.length - 1)) {
                i = 0;
                //you can even clear interval here to make heading stay as last one in array
                //cleanInterval(intervalId);

            } else {
                i++;
            }
        }, 2000)
    </script>
</head>

@model HomeViewModel

    <div>
        <h1>Get Ready To Eat !</h1>
        <h1 id="heading" class="subhead"></h1>
        <h2 class="subheader">Order delicious food of your choice !</h2>
        <br />
    </div>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block h-50 w-100" src="/img/c5.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Happiness</h5>
                    <p>Discover the best food to spark your mood !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block h-50 w-100" src="/img/c6.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Quality</h5>
                    <p>Serving the most hygienic food !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block h-50 w-100" src="/img/c7.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Delivery</h5>
                    <p>Super fast zero contact delivery !</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
    <h3 id="pagehead">Know About Us !</h3>
    <div class="homemainflex">
        
        <div>
            <div class="homeflex">
                <img src="~/img/home1.png" />
            </div>
            <div class="homeheading">
                No Minimum Order
            </div>
            <div class="hometext">
                Order in for yourself or for the group, with no restrictions on order value
            </div>
        </div>
        <div>
            <div class="homeflex">
                <img src="~/img/home2.png" />
            </div>
            <div class="homeheading">
                Live Order Tracking
            </div>
            <div class="hometext">
                Know where your order is at all times, from the restaurant to your doorstep
            </div>
        </div>
        <div>
            <div class="homeflex">
                <img src="~/img/home3.png" />
            </div>
            <div class="homeheading">
               Lightning-fast delivery
            </div>
            <div class="hometext">
                Experience EatFit's superfast delivery for food delivered fresh &amp; on time
            </div>
        </div>
    </div>
    <br/>

    <h3 id="pagehead"> Best dishes recommended by the Chef!</h3>
    <div class="card-deck">
        
        <div class="card-body">

            <div class="row">

                @foreach (var food in Model.FoodMenu)
                {
                    <partial name="_FoodItem" model="food" />
                }

            </div>
        </div>
    </div>
</html>